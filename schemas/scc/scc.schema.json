{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/scc/scc.schema.json",
  "title": "StandardizedClaimCapsule",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "header",
    "invariants",
    "causal",
    "epistemic",
    "payload",
    "signature"
  ],
  "properties": {
    "header": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "version",
        "uid"
      ],
      "properties": {
        "version": {
          "type": "string"
        },
        "uid": {
          "type": "string"
        }
      }
    },
    "invariants": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "physhir",
        "details_hash"
      ],
      "properties": {
        "physhir": {
          "type": "string"
        },
        "details_hash": {
          "type": "string"
        }
      }
    },
    "causal": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "dag_hash",
        "temporal_ok",
        "backdoor_ok",
        "canary_ok"
      ],
      "properties": {
        "dag_hash": {
          "type": "string"
        },
        "temporal_ok": {
          "type": "boolean"
        },
        "backdoor_ok": {
          "type": "boolean"
        },
        "canary_ok": {
          "type": "boolean"
        }
      }
    },
    "epistemic": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "wealth",
        "alpha",
        "threshold",
        "prior",
        "cert"
      ],
      "properties": {
        "wealth": {
          "type": "number"
        },
        "alpha": {
          "type": "number"
        },
        "threshold": {
          "type": "number"
        },
        "prior": {
          "type": "number"
        },
        "cert": {
          "type": "string"
        }
      }
    },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "hir_hash",
        "executable_hash"
      ],
      "properties": {
        "hir_hash": {
          "type": "string"
        },
        "executable_hash": {
          "type": "string"
        }
      }
    },
  "$id": "https://evidenceos.dev/schemas/scc/scc.schema.json",
  "title": "Standardized Claim Capsule",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "scc_id",
    "version",
    "claim",
    "safety_case_id",
    "uvp_session_id",
    "safety_properties",
    "adversarial_hypotheses",
    "decision",
    "decision_trace_hash",
    "transcript_hash",
    "canonical_hash"
  ],
  "properties": {
    "scc_id": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "claim": {
      "type": "string"
    },
    "safety_case_id": {
      "type": "string"
    },
    "uvp_session_id": {
      "type": "string"
    },
    "safety_properties": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "../uvp/safety_property.schema.json"
      }
    },
    "adversarial_hypotheses": {
      "type": "array",
      "items": {
        "$ref": "../uvp/adversarial_hypothesis.schema.json"
      }
    },
    "decision": {
      "type": "string",
      "enum": [
        "valid",
        "invalid",
        "indeterminate"
      ]
    },
    "decision_trace_hash": {
      "type": "string"
    },
    "transcript_hash": {
      "type": "string"
    },
    "canonical_hash": {
      "type": "string"
    },
    "evidence_ledger_id": {
      "type": "string"
    },
    "signatures": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/signature"
      }
    }
  },
  "$defs": {
    "signature": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "kernel_pubkey",
        "kernel_sig",
        "timestamp_utc"
      ],
      "properties": {
        "kernel_pubkey": {
          "type": "string"
        },
        "kernel_sig": {
          "type": "string"
        },
        "timestamp_utc": {
        "signer_id",
        "algorithm",
        "signature"
      ],
      "properties": {
        "signer_id": {
          "type": "string"
        },
        "algorithm": {
          "type": "string"
        },
        "signature": {
          "type": "string"
        }
      }
    }
  }
}
