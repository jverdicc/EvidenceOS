{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://evidenceos.dev/schemas/popperpp/subhypothesis.schema.json",
  "title": "SubHypothesis",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "id",
    "template",
    "null_nl",
    "alt_nl",
    "test_object",
    "metadata_only_ok"
  ],
  "properties": {
    "version": {
      "type": "string",
      "const": "v1"
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "template": {
      "type": "string",
      "enum": [
        "NEGATIVE_CONTROL",
        "PLACEBO",
        "SUBSET_INVARIANCE",
        "ALT_ESTIMATOR",
        "SHIFT_SLICE",
        "MULTIVERSE_SPEC"
      ]
    },
    "null_nl": {
      "type": "string",
      "minLength": 1
    },
    "alt_nl": {
      "type": "string",
      "minLength": 1
    },
    "test_object": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "kind", "params"],
      "properties": {
        "id": {"type": "string", "minLength": 1},
        "kind": {"type": "string", "minLength": 1},
        "lane_hint": {"type": "string"},
        "params": {"type": "object"}
      }
    },
    "metadata_only_ok": {
      "type": "boolean"
    }
  }
}
