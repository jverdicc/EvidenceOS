{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://evidenceos.dev/schemas/popperpp/falsification_config.schema.json",
  "title": "FalsificationConfig",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "alpha",
    "kappa",
    "max_rounds",
    "max_failed_rounds",
    "max_total_tests_per_claim",
    "max_total_tests_per_dataset",
    "lane_policy",
    "selection_policy",
    "allow_llm_design"
  ],
  "properties": {
    "version": {
      "type": "string",
      "const": "v1"
    },
    "alpha": {
      "type": "number",
      "exclusiveMinimum": 0,
      "exclusiveMaximum": 1
    },
    "kappa": {
      "type": "number",
      "exclusiveMinimum": 0,
      "exclusiveMaximum": 1
    },
    "max_rounds": {
      "type": "integer",
      "minimum": 1
    },
    "max_failed_rounds": {
      "type": "integer",
      "minimum": 0
    },
    "max_total_tests_per_claim": {
      "type": "integer",
      "minimum": 1
    },
    "max_total_tests_per_dataset": {
      "type": "integer",
      "minimum": 1
    },
    "lane_policy": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "selection_policy": {
      "type": "string",
      "enum": ["greedy_expected_info", "uniform", "bandit_ucb"]
    },
    "allow_llm_design": {
      "type": "boolean"
    }
  }
}
