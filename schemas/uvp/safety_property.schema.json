{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://evidenceos.dev/schemas/uvp/safety_property.schema.json",
  "title": "Safety Property",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "property_id",
    "policy",
    "scope"
  ],
  "properties": {
    "property_id": {
      "type": "string"
    },
    "policy": {
      "type": "string"
    },
    "scope": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "evidence_requirements": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
