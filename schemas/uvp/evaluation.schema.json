{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://evidenceos.dev/schemas/uvp/evaluation.schema.json",
  "title": "UVP Evaluation Entry",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "index",
    "hypothesis",
    "outcome_x",
    "meta",
    "status",
    "gate_status",
    "gate_errors",
    "e_increment",
    "ewl_before",
    "ewl_after",
    "leakage_bits",
    "leakage_total_bits"
  ],
  "properties": {
    "index": {"type": "integer", "minimum": 0},
    "hypothesis": {"type": "string", "minLength": 1},
    "outcome_x": {"type": "integer", "enum": [0, 1]},
    "meta": {"type": "object"},
    "status": {"type": "string", "enum": ["VALID", "INVALID"]},
    "gate_status": {"type": "string", "enum": ["PASS", "FAIL"]},
    "gate_errors": {
      "type": "array",
      "items": {"type": "string"}
    },
    "e_increment": {"type": "number", "minimum": 0},
    "ewl_before": {"type": "number", "minimum": 0},
    "ewl_after": {"type": "number", "minimum": 0},
    "leakage_bits": {"type": "number", "minimum": 0},
    "leakage_total_bits": {"type": "number", "minimum": 0}
  }
}
