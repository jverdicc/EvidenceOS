{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://evidenceos.dev/schemas/uvp/reality_gate_report.schema.json",
  "title": "UVP Reality Gate Report",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "entries"],
  "properties": {
    "version": {"type": "string", "minLength": 1},
    "entries": {
      "type": "array",
      "items": {"$ref": "#/$defs/entry"}
    }
  },
  "$defs": {
    "entry": {
      "type": "object",
      "additionalProperties": false,
      "required": ["index", "status", "errors", "gates"],
      "properties": {
        "index": {"type": "integer", "minimum": 0},
        "status": {"type": "string", "enum": ["PASS", "FAIL"]},
        "errors": {
          "type": "array",
          "items": {"type": "string"}
        },
        "gates": {
          "type": "object",
          "additionalProperties": false,
          "required": ["physhir", "causal_dag", "canary", "ewl"],
          "properties": {
            "physhir": {"type": "string", "enum": ["PASS", "FAIL", "SKIPPED"]},
            "causal_dag": {"type": "string", "enum": ["PASS", "FAIL", "SKIPPED"]},
            "canary": {"type": "string", "enum": ["PASS", "FAIL", "SKIPPED"]},
            "ewl": {"type": "string", "enum": ["PASS", "FAIL", "SKIPPED"]}
          }
        }
      }
    }
  }
}
