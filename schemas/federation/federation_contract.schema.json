{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/federation/federation_contract.schema.json",
  "title": "FederationContract",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "federation_id",
    "claim_id",
    "frozen_plan_hash",
    "vaults",
    "merge_policy"
  ],
  "properties": {
    "federation_id": {
      "type": "string"
    },
    "claim_id": {
      "type": "string"
    },
    "frozen_plan_hash": {
      "type": "string"
    },
    "vaults": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "vault_descriptor.schema.json"
      }
    },
    "merge_policy": {
      "$ref": "merger_policy.schema.json"
    },
    "max_global_queries": {
      "type": [
        "integer",
        "null"
      ],
      "minimum": 1
    },
    "max_adaptive_rounds": {
      "type": [
        "integer",
        "null"
      ],
      "minimum": 0
    },
    "signatures": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}