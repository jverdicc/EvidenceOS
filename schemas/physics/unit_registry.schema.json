{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/physics/unit_registry.schema.json",
  "title": "UnitRegistry",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "registry_id",
    "units"
  ],
  "properties": {
    "registry_id": {
      "type": "string"
    },
    "units": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/unit_entry"
  "$id": "https://evidenceos.dev/schemas/physics/unit_registry.schema.json",
  "title": "Unit Registry",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "units"
  ],
  "properties": {
    "units": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/unit"
      }
    }
  },
  "$defs": {
    "unit_entry": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "dimension_vector",
        "aliases"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "dimension_vector": {
          "type": "array",
          "minItems": 7,
          "maxItems": 7,
          "items": {
            "type": "number"
          }
        },
        "aliases": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "scale_factor": {
          "type": "number"
        },
        "offset": {
          "type": "number"
    "unit": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "symbol",
        "dimension"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "symbol": {
          "type": "string"
        },
        "dimension": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "m",
            "kg",
            "s",
            "A",
            "K",
            "mol",
            "cd"
          ],
          "properties": {
            "m": {
              "type": "integer"
            },
            "kg": {
              "type": "integer"
            },
            "s": {
              "type": "integer"
            },
            "A": {
              "type": "integer"
            },
            "K": {
              "type": "integer"
            },
            "mol": {
              "type": "integer"
            },
            "cd": {
              "type": "integer"
            }
          }
        }
      }
    }
  }
}
