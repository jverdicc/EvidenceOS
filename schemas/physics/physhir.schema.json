{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/physics/physhir.schema.json",
  "title": "PhysHIR",
  "type": "object",
  "additionalProperties": false,
  "required": ["target", "variables", "expression"],
  "properties": {
    "target": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "units"],
      "properties": {
        "name": {"type": "string"},
        "units": {"type": "string"}
      }
    },
    "variables": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "units"],
        "properties": {
          "name": {"type": "string"},
          "units": {"type": "string"}
        }
      }
    },
    "expression": {"$ref": "#/$defs/expr"}
  },
  "$defs": {
    "expr": {
      "oneOf": [
        {"$ref": "#/$defs/var"},
        {"$ref": "#/$defs/const"},
        {"$ref": "#/$defs/add"},
        {"$ref": "#/$defs/sub"},
        {"$ref": "#/$defs/mul"},
        {"$ref": "#/$defs/div"},
        {"$ref": "#/$defs/pow"},
        {"$ref": "#/$defs/exp"},
        {"$ref": "#/$defs/log"},
        {"$ref": "#/$defs/sin"},
        {"$ref": "#/$defs/cos"},
        {"$ref": "#/$defs/clamp"}
      ]
    },
    "var": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "name"],
      "properties": {
        "type": {"const": "Var"},
        "name": {"type": "string"}
      }
    },
    "const": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "value"],
      "properties": {
        "type": {"const": "Const"},
        "value": {"type": "number"},
        "units": {"type": "string"}
      }
    },
    "add": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "lhs", "rhs"],
      "properties": {
        "type": {"const": "Add"},
        "lhs": {"$ref": "#/$defs/expr"},
        "rhs": {"$ref": "#/$defs/expr"}
      }
    },
    "sub": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "lhs", "rhs"],
      "properties": {
        "type": {"const": "Sub"},
        "lhs": {"$ref": "#/$defs/expr"},
        "rhs": {"$ref": "#/$defs/expr"}
      }
    },
    "mul": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "lhs", "rhs"],
      "properties": {
        "type": {"const": "Mul"},
        "lhs": {"$ref": "#/$defs/expr"},
        "rhs": {"$ref": "#/$defs/expr"}
      }
    },
    "div": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "lhs", "rhs"],
      "properties": {
        "type": {"const": "Div"},
        "lhs": {"$ref": "#/$defs/expr"},
        "rhs": {"$ref": "#/$defs/expr"}
      }
    },
    "pow": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "base", "exponent"],
      "properties": {
        "type": {"const": "Pow"},
        "base": {"$ref": "#/$defs/expr"},
        "exponent": {"type": "integer"}
      }
    },
    "exp": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "arg"],
      "properties": {
        "type": {"const": "Exp"},
        "arg": {"$ref": "#/$defs/expr"}
      }
    },
    "log": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "arg"],
      "properties": {
        "type": {"const": "Log"},
        "arg": {"$ref": "#/$defs/expr"}
      }
    },
    "sin": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "arg"],
      "properties": {
        "type": {"const": "Sin"},
        "arg": {"$ref": "#/$defs/expr"}
      }
    },
    "cos": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "arg"],
      "properties": {
        "type": {"const": "Cos"},
        "arg": {"$ref": "#/$defs/expr"}
      }
    },
    "clamp": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "arg", "min", "max"],
      "properties": {
        "type": {"const": "Clamp"},
        "arg": {"$ref": "#/$defs/expr"},
        "min": {"type": "number"},
        "max": {"type": "number"}
  "$id": "https://evidenceos.dev/schemas/physics/physhir.schema.json",
  "title": "PhysHIR",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "hir_id",
    "variables"
  ],
  "properties": {
    "hir_id": {
      "type": "string"
    },
    "variables",
    "constraints"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "unit_registry": {
      "$ref": "unit_registry.schema.json"
    },
    "variables": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/hir_variable"
        "$ref": "#/$defs/hirVariable"
      }
    },
    "constraints": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/constraint_ref"
        "$ref": "constraints.schema.json"
      }
    }
  },
  "$defs": {
    "unit_spec": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "representation",
        "value"
      ],
      "properties": {
        "representation": {
          "type": "string",
          "enum": [
            "si_vector",
            "token"
          ]
        },
        "value": {
          "oneOf": [
            {
              "type": "array",
              "minItems": 7,
              "maxItems": 7,
              "items": {
                "type": "number"
              }
            },
            {
              "type": "string"
            }
          ]
        }
      }
    },
    "hir_variable": {
    "hirVariable": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "units"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "units": {
          "$ref": "#/$defs/unit_spec"
          "oneOf": [
            {
              "$ref": "#/$defs/siBaseVector"
            },
            {
              "$ref": "#/$defs/unitTokens"
            }
          ]
        },
        "value": {
          "type": [
            "number",
            "string",
            "null"
          ]
        },
        "uncertainty": {
          "type": "number",
          "minimum": 0
        },
        "metadata": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "source": {
              "type": "string"
            },
            "timestamp": {
              "type": "string",
              "format": "date-time"
            }
          }
        }
      }
    },
    "constraint_ref": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "constraint_id"
      ],
      "properties": {
        "constraint_id": {
          "type": "string"
        }
      }
            "string"
          ]
        }
      }
    },
    "siBaseVector": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "m",
        "kg",
        "s",
        "A",
        "K",
        "mol",
        "cd"
      ],
      "properties": {
        "m": {
          "type": "integer"
        },
        "kg": {
          "type": "integer"
        },
        "s": {
          "type": "integer"
        },
        "A": {
          "type": "integer"
        },
        "K": {
          "type": "integer"
        },
        "mol": {
          "type": "integer"
        },
        "cd": {
          "type": "integer"
        }
      }
    },
    "unitTokens": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    }
  }
}
