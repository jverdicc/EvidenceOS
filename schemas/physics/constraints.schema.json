{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/physics/constraints.schema.json",
  "title": "PhysHIRConstraints",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "constraints"
  ],
  "properties": {
    "constraints": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/constraint"
      }
    }
  },
  "$defs": {
    "constraint": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "constraint_type",
        "variables",
        "conservation_law",
        "units"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "constraint_type": {
          "type": "string",
          "enum": [
            "conservation",
            "dimensional",
            "bounds"
          ]
        },
        "variables": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/constraint_variable"
          }
        },
        "conservation_law": {
          "type": "string"
        },
        "tolerance": {
          "type": "number",
          "minimum": 0
        },
        "units": {
          "$ref": "#/$defs/unit_spec"
        }
      }
    },
    "constraint_variable": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "units"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "role": {
          "type": "string"
        },
        "units": {
          "$ref": "#/$defs/unit_spec"
        }
      }
    },
    "unit_spec": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "representation",
        "value"
      ],
      "properties": {
        "representation": {
          "type": "string",
          "enum": [
            "si_vector",
            "token"
          ]
        },
        "value": {
          "oneOf": [
            {
              "type": "array",
              "minItems": 7,
              "maxItems": 7,
              "items": {
                "type": "number"
              }
            },
            {
              "type": "string"
            }
          ]
        }
      }
    }
  }
}
