{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/causal/causal_graph.schema.json",
  "title": "CausalGraph",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "graph_id",
    "nodes",
    "edges"
  ],
  "properties": {
    "graph_id": {
      "type": "string"
    },
    "nodes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/node"
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/edge"
      }
    }
  },
  "$defs": {
    "node": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "time_index": {
          "type": "integer"
        }
      }
    },
    "edge": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "source",
        "target"
      ],
      "properties": {
        "source": {
          "type": "string"
        },
        "target": {
          "type": "string"
        },
        "edge_type": {
          "type": "string",
          "enum": [
            "direct",
            "bidirected",
            "latent"
          ]
        }
      }
    }
  }
}
