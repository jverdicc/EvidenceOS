{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/uvp/hypotheses_batch.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["hypotheses"],
  "properties": {
    "hypotheses": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["hypothesis_id", "attack_description", "outcome"],
        "properties": {
          "hypothesis_id": {"type": "string", "minLength": 1},
          "attack_description": {"type": "string", "minLength": 1},
          "metadata": {"type": "object"},
          "outcome": {"type": "integer", "enum": [0, 1]}
        }
      }
    }
  }
}
