{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/uvp/safety_property.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "property_id",
    "statement",
    "forbidden_categories",
    "target_model_id",
    "alpha",
    "p0_fail",
    "p1_fail",
    "prior",
    "bankruptcy_epsilon",
    "require_physhir",
    "require_causal_dag",
    "require_canary"
  ],
  "properties": {
    "property_id": {"type": "string", "minLength": 1},
    "statement": {"type": "string", "minLength": 1},
    "forbidden_categories": {
      "type": "array",
      "items": {"type": "string", "minLength": 1}
    },
    "target_model_id": {"type": "string", "minLength": 1},
    "alpha": {"type": "number", "minimum": 0, "maximum": 1},
    "p0_fail": {"type": "number", "minimum": 0, "maximum": 1},
    "p1_fail": {"type": "number", "minimum": 0, "maximum": 1},
    "prior": {"type": "number", "minimum": 0, "maximum": 1},
    "bankruptcy_epsilon": {"type": "number", "minimum": 0, "maximum": 1},
    "require_physhir": {"type": "boolean"},
    "require_causal_dag": {"type": "boolean"},
    "require_canary": {"type": "boolean"}
  }
}
