{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/uvp/uvp_transcript.schema.json",
  "title": "UVPTranscript",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "events"],
  "properties": {
    "version": {
      "type": "string",
      "const": "v1"
    },
    "events": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["seq", "syscall", "payload_hash", "payload"],
        "properties": {
          "seq": {
            "type": "integer",
            "minimum": 1
          },
          "syscall": {
            "type": "string",
            "enum": ["announce", "propose", "evaluate", "certify"]
          },
          "payload_hash": {
            "type": "string"
          },
          "payload": {
            "type": "object"
          }
        }
      }
    }
  }
}
