{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/federation/local_ledger_summary.schema.json",
  "title": "LocalLedgerSummary",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "vault_id",
    "integrity_state",
    "evidence_lane",
    "privacy_lane",
    "summary_hash",
    "signature"
  ],
  "properties": {
    "vault_id": {
      "type": "string"
    },
    "integrity_state": {
      "type": "string",
      "enum": [
        "Trusted",
        "Unknown",
        "Corrupted"
      ]
    },
    "evidence_lane": {
      "type": "object",
      "additionalProperties": true
    },
    "privacy_lane": {
      "type": "object",
      "additionalProperties": true
    },
    "adaptivity_lane": {
      "type": [
        "object",
        "null"
      ],
      "additionalProperties": true
    },
    "summary_hash": {
      "type": "string"
    },
    "signature": {
      "type": "string"
    }
  }
}