{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/federation/merger_policy.schema.json",
  "title": "MergerPolicy",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "evidence_merge",
    "dp_merge",
    "integrity_merge",
    "dropout_policy",
    "certificates"
  ],
  "properties": {
    "evidence_merge": {
      "type": "string",
      "enum": [
        "weighted_mean_evalues",
        "product_evalues"
      ]
    },
    "dp_merge": {
      "type": "string",
      "enum": [
        "max_if_disjoint_else_sum",
        "sum",
        "max"
      ]
    },
    "integrity_merge": {
      "type": "string",
      "enum": [
        "any_corrupted_invalid",
        "majority_corrupted_invalid"
      ]
    },
    "dropout_policy": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "min_quorum",
        "mode"
      ],
      "properties": {
        "min_quorum": {
          "type": "integer",
          "minimum": 1
        },
        "mode": {
          "type": "string",
          "enum": [
            "fail_closed",
            "best_effort"
          ]
        }
      }
    },
    "certificates": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "independence_certified",
        "identity_disjointness_certified"
      ],
      "properties": {
        "independence_certified": {
          "type": "boolean"
        },
        "identity_disjointness_certified": {
          "type": "boolean"
        }
      }
    }
  }
}