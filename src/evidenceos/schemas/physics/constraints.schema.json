{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/physics/constraints.schema.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "pinned_primaries": {
      "type": "array",
      "items": {"$ref": "#/$defs/pinned_primary"},
      "default": []
    },
    "ranges": {
      "type": "array",
      "items": {"$ref": "#/$defs/range_constraint"},
      "default": []
    },
    "conservation": {
      "type": "array",
      "items": {"$ref": "#/$defs/conservation_constraint"},
      "default": []
    }
  },
  "required": ["pinned_primaries", "ranges", "conservation"],
  "$defs": {
    "pinned_primary": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {"type": "string"},
        "units": {"type": "string"},
        "value": {"type": "number"},
        "locked": {"const": true}
      },
      "required": ["name", "units", "value", "locked"]
    },
    "range_constraint": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "var": {"type": "string"},
        "min": {"type": ["number", "null"]},
        "max": {"type": ["number", "null"]},
        "units": {"type": "string"}
      },
      "required": ["var", "min", "max", "units"]
    },
    "conservation_constraint": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "kind": {"type": "string", "enum": ["mass_conservation"]},
        "inputs": {
          "type": "array",
          "items": {"type": "string"},
          "minItems": 1
        },
        "outputs": {
          "type": "array",
          "items": {"type": "string"},
          "minItems": 1
        },
        "tolerance": {"type": "number", "minimum": 0},
        "units": {"type": "string"}
      },
      "required": ["kind", "inputs", "outputs", "tolerance", "units"]
    }
  }
}
