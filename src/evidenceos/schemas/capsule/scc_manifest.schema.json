{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/capsule/scc_manifest.schema.json",
  "title": "StandardizedClaimCapsuleManifest",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "build_utc", "entries"],
  "properties": {
    "version": {
      "type": "string"
    },
    "build_utc": {
      "type": "string",
      "minLength": 1
    },
    "entries": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["path", "sha256"],
        "properties": {
          "path": {"type": "string"},
          "sha256": {"type": "string"}
        }
      }
    }
  }
}
