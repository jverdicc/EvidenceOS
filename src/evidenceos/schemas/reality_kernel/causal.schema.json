{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/reality_kernel/causal.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["nodes", "edges"],
  "properties": {
    "nodes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "role", "time"],
        "properties": {
          "id": {"type": "string", "minLength": 1},
          "role": {
            "type": "string",
            "enum": [
              "treatment",
              "outcome",
              "confounder",
              "canary",
              "mediator",
              "instrument"
            ]
          },
          "time": {"type": "number"}
        }
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["source", "target"],
        "properties": {
          "source": {"type": "string", "minLength": 1},
          "target": {"type": "string", "minLength": 1}
        }
      }
    },
    "adjustments": {
      "type": "array",
      "items": {"type": "string", "minLength": 1}
    }
  }
}
