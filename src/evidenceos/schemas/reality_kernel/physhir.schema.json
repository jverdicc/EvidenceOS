{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/reality_kernel/physhir.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["quantities"],
  "properties": {
    "quantities": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "value", "unit", "dimension"],
        "properties": {
          "name": {"type": "string", "minLength": 1},
          "value": {"type": "number"},
          "unit": {
            "type": "string",
            "enum": ["m", "s", "kg", "N", "J"]
          },
          "dimension": {"type": "string", "minLength": 1}
        }
      }
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "type", "terms", "equals"],
        "properties": {
          "id": {"type": "string", "minLength": 1},
          "type": {"type": "string", "enum": ["sum_equals"]},
          "terms": {
            "type": "array",
            "minItems": 2,
            "items": {"type": "string", "minLength": 1}
          },
          "equals": {"type": "string", "minLength": 1}
        }
      }
    }
  }
}
