{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/evidence/eprocess.schema.json",
  "title": "EvidenceProcessRecord",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "alpha",
    "prior",
    "prior_multiplier",
    "effective_threshold"
  ],
  "properties": {
    "alpha": {
      "type": "number",
      "exclusiveMinimum": 0,
      "maximum": 1
    },
    "prior": {
      "type": "number",
      "exclusiveMinimum": 0,
      "maximum": 1
    },
    "prior_multiplier": {
      "type": "number",
      "minimum": 1,
      "maximum": 1000000
    },
    "effective_threshold": {
      "type": "number",
      "exclusiveMinimum": 0
    }
  }
}
